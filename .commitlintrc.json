{
  "extends": ["@commitlint/config-conventional"],
  "rules": {
    "header-max-length": [2, "always", 100],
    "type-enum": [
      2,
      "always",
      ["chore", "docs", "feat", "fix", "refactor", "style"]
    ],
    "scope-empty": [2, "never"],
    "scope-enum": [2, "always", ["config", "home", "detail", "general"]]
  }
}
